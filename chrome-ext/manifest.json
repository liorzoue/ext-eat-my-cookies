{
    "manifest_version": 2,
    "name": "Eat my Cookies",
    "description": "Feed me !",
    "version": "0.2.2",
    "permissions": [
        "cookies",
        "storage",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "options_ui": {
        "page": "layouts/options.html"
    },
    "icons": { 
        "128": "img/cookie-128.png",
        "64": "img/cookie-64.png",
        "32": "img/cookie-32.png",
        "24": "img/cookie-24.png",
        "16": "img/cookie-16.png"
    },
    "browser_action": {
        "default_icon": "img/cookie-64.png",
        "default_title": "Feed me !"
    }
}